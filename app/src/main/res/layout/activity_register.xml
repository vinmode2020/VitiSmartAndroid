<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkgreen2"
    tools:context=".Register">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/joti_one"
        android:text="VitiSmart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#D2E41B"
        android:textColorHighlight="#FFFEFE"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aref_ruqaa"
        android:text="Create a new account"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar" />

    <EditText
        android:id="@+id/fullName"
        android:layout_width="343dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_round"
        android:ems="10"
        android:hint="  Full Name"
        android:inputType="textPersonName"
        android:rotationY="2"
        android:singleLine="false"
        android:textColor="#4CAF50"
        android:textColorHint="#A7B7C2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="108dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_round"
        android:text="Sign Up"
        app:backgroundTint="#098F0E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone" />

    <Button
        android:id="@+id/createText"
        android:layout_width="321dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_round"
        android:text="Already have an account? Sign In"
        app:backgroundTint="#098F0E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview" />


    <EditText
        android:id="@+id/phone"
        android:layout_width="343dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_round"
        android:ems="10"
        android:hint="  Phone"
        android:inputType="textPersonName"
        android:rotationY="2"
        android:singleLine="false"
        android:textColor="#4CAF50"
        android:textColorHint="#A7B7C2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConfPassword" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="343dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_round"
        android:ems="10"
        android:hint="  Email"
        android:inputType="textPersonName"
        android:rotationY="2"
        android:singleLine="false"
        android:textColor="#4CAF50"
        android:textColorHint="#A7B7C2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullName" />

    <EditText
        android:id="@+id/password"
        android:layout_width="343dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_round"
        android:ems="10"
        android:hint="  Password"
        android:inputType="textPassword"
        android:rotationY="2"
        android:singleLine="false"
        android:textColor="#4CAF50"
        android:textColorHint="#A7B7C2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email" />

    <EditText
        android:id="@+id/ConfPassword"
        android:layout_width="343dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_round"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:rotationY="2"
        android:singleLine="false"
        android:textColor="#4CAF50"
        android:textColorHint="#A7B7C2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createText" />

</androidx.constraintlayout.widget.ConstraintLayout>